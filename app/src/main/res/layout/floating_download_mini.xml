<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/menu_background"
    android:padding="12dp"
    android:elevation="12dp">

    <!-- Header con botón de regresar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:padding="6dp"
            android:src="@drawable/ic_arrow_back"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="Regresar" />

        <View
            android:id="@+id/platform_indicator"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/ic_instagram" />

        <TextView
            android:id="@+id/txt_platform_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Instagram"
            android:textColor="#1E293B"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Contenedor del campo de texto para URL (se oculta al descargar) -->
    <LinearLayout
        android:id="@+id/input_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/input_background"
        android:padding="4dp"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/edit_url"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:hint="Pega el enlace aquí..."
            android:textColorHint="#94A3B8"
            android:textColor="#1E293B"
            android:textSize="12sp"
            android:paddingStart="8dp"
            android:paddingEnd="4dp"
            android:singleLine="true"
            android:inputType="textUri"
            android:importantForAutofill="no" />

        <ImageView
            android:id="@+id/btn_paste"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:padding="8dp"
            android:src="@drawable/ic_paste"
            android:background="@drawable/ic_instagram"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="Pegar" />

    </LinearLayout>

    <!-- Botones: Guardar en la nube + Descargar -->
    <LinearLayout
        android:id="@+id/action_buttons_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_cloud_save"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Nube"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="@drawable/btn_download_background" />

        <Button
            android:id="@+id/btn_download"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:text="Descargar"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="@drawable/btn_download_background" />

    </LinearLayout>

    <!-- Estado de descarga -->
    <LinearLayout
        android:id="@+id/download_status_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_marginTop="8dp">

        <ProgressBar
            android:id="@+id/progress_bar"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:max="100"
            android:progress="0" />

        <TextView
            android:id="@+id/txt_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Descargando..."
            android:textColor="#64748B"
            android:textSize="11sp"
            android:gravity="center" />

    </LinearLayout>

</LinearLayout>


